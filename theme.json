{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
					"slug": "system-fonts",
					"name": "System fonts"
				},
				{
					"fontFamily": "\"Inter\", sans-serif",
					"name": "Inter",
					"slug": "inter",
					"fontFace": [
						{
							"fontFamily": "Inter",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "200 900",
							"src": [
								"file:./src/fonts/inter/Inter-VariableFont_slnt,wght.ttf"
							]
						}
					]
				},
				{
					"fontFamily": "Oxygen",
					"slug": "oxygen",
					"fontFace": [
						{
							"fontFamily": "Oxygen",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": [
								"file:./src/fonts/oxygen/Oxygen-Light.ttf"
							]
						},
						{
							"fontFamily": "Oxygen",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./src/fonts/oxygen/Oxygen-Regular.ttf"
							]
						},
						{
							"fontFamily": "Oxygen",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": [
								"file:./src/fonts/oxygen/Oxygen-Bold.ttf"
							]
						}
					]
				}
			]
		},
		"color": {
			"background": true,
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultGradients": false,
			"defaultPalette": false,
			"link": true,
			"text": true,
			"duotone": [],
			"gradients": [],
			"palette": [
				{
					"color": "#3B28CC",
					"slug": "primary-100",
					"name": "Primary 100"
				},
				{
					"color": "#2667FF",
					"slug": "secondary-100",
					"name": "Secondary 100"
				},
				{
					"color": "#2595E7",
					"slug": "tertiary-100",
					"name": "Tertiary 100"
				},
				{
					"color": "#22C55E",
					"slug": "success",
					"name": "Success"
				},
				{
					"color": "#EAB308",
					"slug": "warning",
					"name": "Warning"
				},
				{
					"color": "#EF4444",
					"slug": "error",
					"name": "Error"
				},
				{
					"color": "#F9FAFB",
					"slug": "grey-50",
					"name": "Grey 50"
				},
				{
					"color": "#F3F4F6",
					"slug": "grey-100",
					"name": "Grey 100"
				},
				{
					"color": "#E5E7EB",
					"slug": "grey-200",
					"name": "Grey 200"
				},
				{
					"color": "#D1D5DB",
					"slug": "grey-300",
					"name": "Grey 300"
				},
				{
					"color": "#9CA3AF",
					"slug": "grey-400",
					"name": "Grey 400"
				},
				{
					"color": "#6B7280",
					"slug": "grey-500",
					"name": "Grey 500"
				},
				{
					"color": "#4B5563",
					"slug": "grey-600",
					"name": "Grey 600"
				},
				{
					"color": "#374151",
					"slug": "grey-700",
					"name": "Grey 700"
				},
				{
					"color": "#1F2937",
					"slug": "grey-800",
					"name": "Grey 800"
				},
				{
					"color": "#111827",
					"slug": "grey-900",
					"name": "Grey 900"
				}
			]
		},
		"layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		}
	},

	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"fontSize": "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--50)"
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--primary-300)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"button": {
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-300)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-200)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--tertiary-200)"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--tertiary-300)"
				},
				":active": {
					"color": {
						"text": { "ref": "styles.color.text" }
					}
				}
			}
		},
		"blocks": {
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontWeight": "bold"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/heading": {
				"typography": {
					"fontWeight": "bold"
				},
				"spacing": {
					"margin": {
						"top": "0.5em",
						"bottom": "0.25em"
					}
				},
				"elements": {
					"h1": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--huge)"
						}
					},
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--x-large)"
						}
					},
					"h3": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--large)"
						}
					},
					"h4": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--medium)"
						}
					},
					"h5": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--normal)"
						}
					},
					"h6": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--small)"
						}
					}
				}
			},
			"core/paragraph": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"lineHeight": "1.5"
				},
				"spacing": {
					"padding": {
						"bottom": "1em"
					}
				}
			},
			"core/button": {
				"variations": {
					"outline": {
						"border": {
							"color": "currentColor",
							"style": "solid",
							"width": "1px"
						},
						"spacing": {
							"padding": {
								"top": "14px",
								"right": "29px",
								"bottom": "14px",
								"left": "29px"
							}
						}
					}
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--contrast)",
					"text": "var(--wp--preset--color--base)"
				},
				"css": "& code {overflow-wrap: normal; overflow-x: scroll; tab-size: 4; white-space: pre !important;}",
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--line-height--medium)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--line-height--medium)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--line-height--medium)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comments": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--x-large)"
					}
				}
			},
			"core/comments-title": {
				"spacing": {
					"margin": {
						"top": "var(--wp--custom--spacing--gap)",
						"bottom": "var(--wp--custom--spacing--gap)"
					}
				}
			},
			"core/image": {
				"css": "&.aligncenter {margin-left: auto; margin-right: auto;}"
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-comments-form": {
				"css": "& input[type=submit] {width: auto;} & label {font-size: var(--wp--preset--font-size--x-small);}"
			},
			"core/post-template": {
				"css": "& .wp-block-post:not(:last-of-type) {margin-bottom: var(--wp--preset--spacing--medium);}"
			},
			"core/preformatted": {
				"color": {
					"background": "var(--wp--preset--color--contrast)",
					"text": "var(--wp--preset--color--base)"
				},
				"css": "{overflow-wrap: normal; overflow-x: scroll; tab-size: 4; white-space: pre !important;}",
				"spacing": {
					"padding": {
						"top": "25px",
						"right": "30px",
						"bottom": "25px",
						"left": "30px"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/pullquote": {
				"border": {
					"color": "var(--wp--preset--color--contrast)",
					"style": "solid",
					"width": "1px"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "var(--wp--custom--line-height--medium)"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--contrast)",
					"style": "solid",
					"width": "1px"
				}
			},
			"core/separator": {
				"border": {
					"color": "currentColor",
					"radius": "0",
					"style": "solid",
					"width": "1px 0 0"
				},
				"css": ":not(.is-style-wide):not(.is-style-dots) {width: 100px;}"
			},
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"core/social-links": {
				"css": ".is-style-outline .wp-block-social-link {background-color: transparent;border: 1px solid currentColor;}"
			},
			"core/spacer": {
				"spacing": {
					"margin": {
						"top": "0 !important"
					}
				}
			},
			"core/table": {
				"css": "th {border-color: var(--wp--preset--color--contrast) !important;} & td {border-color: var(--wp--preset--color--contrast) !important;}",
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/template-part": {
				"spacing": {
					"margin": {
						"top": "0px !important"
					}
				}
			}
		}
	},

	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "content",
			"title": "Content",
			"area": "uncategorized"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank"
		},
		{
			"name": "no-title",
			"title": "No Title"
		}
	]
}
